<div class="forms">
<h1> Edit Recipe </h1>
<%= form_for @recipe, url: {action: "update"} do |f| %>
 <table>
   <tr>
    <td><%= f.label  :title , 'Title : '%></td>
    <td><%=f.text_area :title , size: "80x1" %></td>
    </tr>
    <tr>
    <td><%= f.label  :Category, 'Category : '%></td>
    <td><%=f.text_area :category ,size: "80x1"%></td>
    </tr>
    <tr>
    <td><%= f.label  :Ingredients , 'Ingredients : '%></td>
    <td><%=f.text_area :ingredients , size: "80x10" %></td>
    </tr>
    <tr>
    <td><%= f.label :Directions  , 'Directions : '%></td>
    <td><%=f.text_area :directions, size: "80x10" %></td>
    </tr>
    <tr>
    <td><%= f.label :Notes , 'Directions : '%></td>
    <td><%=f.text_area :notes , size: "80x5" %></td>
    </tr>
    <tr>
    <td><%= f.label :image , 'Image : '%></td>
    <td><%=f.text_area :image , size: "80x1"%></td>
    </tr>
    </table><br>
   <%= f.submit "Submit" , :class => "btn btn-light"%> 
<% end %>
</div>